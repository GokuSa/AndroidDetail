<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_round"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="@dimen/im_pop_width"
        android:layout_height="@dimen/im_pop_height"
        android:background="@drawable/bg_pop_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="@dimen/im_pop_icon"
            android:layout_height="@dimen/im_pop_icon"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="群聊" />
    </LinearLayout>

    <View
        android:layout_width="120dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@color/m_divider_line_color" />

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="@dimen/im_pop_width"
        android:layout_height="@dimen/im_pop_height"
        android:background="@drawable/bg_pop_middle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="@dimen/im_pop_icon"
            android:layout_height="@dimen/im_pop_icon"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="群聊" />
    </LinearLayout>

    <View
        android:layout_width="120dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@color/m_divider_line_color" />
    <LinearLayout
        android:id="@+id/three"
        android:layout_width="@dimen/im_pop_width"
        android:layout_height="@dimen/im_pop_height"
        android:background="@drawable/bg_pop_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="@dimen/im_pop_icon"
            android:layout_height="@dimen/im_pop_icon"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="群聊" />
    </LinearLayout>


</LinearLayout>

